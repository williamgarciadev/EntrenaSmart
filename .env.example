# ====================================
# CONFIGURACIÓN DEL BOT DE TELEGRAM
# ====================================

# Token del bot (obtener de @BotFather en Telegram)
TELEGRAM_BOT_TOKEN=tu_token_aqui_1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# ID de Telegram del entrenador (para validar permisos de comandos admin)
# Para obtenerlo, habla con @userinfobot en Telegram
TRAINER_TELEGRAM_ID=123456789

# ====================================
# CONFIGURACIÓN DE RECORDATORIOS
# ====================================

# Minutos antes del entrenamiento para enviar recordatorio (default: 30)
REMINDER_MINUTES_BEFORE=30

# ====================================
# CONFIGURACIÓN DE TIMEOUTS (Importante para Docker)
# ====================================

# Timeout de lectura para requests HTTP a Telegram API en segundos (default: 30.0)
# Aumentar si el bot está en Docker o tiene conexión lenta
TELEGRAM_READ_TIMEOUT=30.0

# Timeout de escritura para requests HTTP a Telegram API en segundos (default: 30.0)
TELEGRAM_WRITE_TIMEOUT=30.0

# Timeout de conexión para requests HTTP a Telegram API en segundos (default: 30.0)
TELEGRAM_CONNECT_TIMEOUT=30.0

# Timeout del pool de conexiones en segundos (default: 30.0)
TELEGRAM_POOL_TIMEOUT=30.0

# Timeout para operaciones async desde scheduler en segundos (default: 30.0)
# Este valor debe ser >= a los timeouts anteriores
TASK_FUTURE_TIMEOUT=30.0

# ====================================
# CONFIGURACIÓN DE ZONA HORARIA
# ====================================

# Zona horaria para los recordatorios
# Ejemplos: America/Bogota, America/Mexico_City, America/Argentina/Buenos_Aires, Europe/Madrid
# Lista completa: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
TIMEZONE=America/Bogota

# ====================================
# CONFIGURACIÓN DE BASE DE DATOS
# ====================================

# Ruta de la base de datos SQLite (relativa al directorio raíz del proyecto)
DATABASE_PATH=storage/entrenasmart.db

# ====================================
# CONFIGURACIÓN DE LOGGING
# ====================================

# Nivel de logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Ruta del archivo de log
LOG_FILE=logs/bot.log

# ====================================
# CONFIGURACIÓN DE REPORTES
# ====================================

# Día de la semana para enviar reporte semanal (0=Lunes, 6=Domingo)
WEEKLY_REPORT_DAY=6

# Hora para enviar reporte semanal (formato 24h: HH:MM)
WEEKLY_REPORT_TIME=20:00

# ====================================
# CONFIGURACIÓN DE DESARROLLO
# ====================================

# Modo debug (true/false)
DEBUG=false

# Entorno (development, production)
ENVIRONMENT=production

