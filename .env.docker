# EntrenaSmart - Variables de Entorno para Docker
# Copia este archivo a .env antes de ejecutar docker-compose

# ============================================================================
# PostgreSQL
# ============================================================================
POSTGRES_DB=entrenasmart
POSTGRES_USER=entrenasmart
POSTGRES_PASSWORD=entrenasmart123

# ============================================================================
# Base de Datos
# ============================================================================
# Utilizando PostgreSQL en Docker
DATABASE_URL=postgresql://entrenasmart:entrenasmart123@postgres:5432/entrenasmart

# ============================================================================
# API Backend
# ============================================================================
# CORS Origins para desarrollo
API_CORS_ORIGINS=http://localhost:5173,http://localhost:80,http://frontend:80

# Debug mode (False en producción)
DEBUG=False

# ============================================================================
# Telegram Bot
# ============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/webhook

# ============================================================================
# Almacenamiento
# ============================================================================
STORAGE_PATH=/app/storage
LOGS_PATH=/app/logs

# ============================================================================
# Configuración de Tiempo
# ============================================================================
TIMEZONE=America/Argentina/Buenos_Aires
